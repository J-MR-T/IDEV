<idea-plugin>
    <id>com.github.amnonya.hdleditor</id>
    <name>Editor for VHDL</name>
    <version>0.1.0</version>
    <vendor email="aamnony@gmail.com" url="http://www.github.com/amnonya">amnonya</vendor>

    <!--TODO: fill description-->
    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

    <!--TODO: fill change notes-->
    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0" />

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="com.github.amnonya.hdleditor.vhdl.fileTypes.VhdlFileTypeFactory" />
        <lang.parserDefinition language="VHDL" implementationClass="com.github.amnonya.hdleditor.vhdl.lang.VhdlParserDefinition" />
        <lang.syntaxHighlighterFactory language="VHDL" implementationClass="com.github.amnonya.hdleditor.vhdl.fileTypes.VhdlSyntaxHighlighterFactory" />
        <colorSettingsPage implementation="com.github.amnonya.hdleditor.vhdl.options.colors.VhdlColorSettingsPage"/>
        <annotator language="VHDL" implementationClass="com.github.amnonya.hdleditor.vhdl.lang.annotation.VhdlAnnotator" />
        <lang.findUsagesProvider language="VHDL" implementationClass="com.github.amnonya.hdleditor.vhdl.lang.findUsages.VhdlFindUsagesProvider" />
        <psi.referenceContributor implementation="com.github.amnonya.hdleditor.vhdl.psi.VhdlReferenceContributor" />
        <lang.commenter language="VHDL" implementationClass="com.github.amnonya.hdleditor.vhdl.lang.VhdlCommenter" />
        <lang.formatter language="VHDL" implementationClass="com.github.amnonya.hdleditor.vhdl.formatting.VhdlFormattingModelBuilder" />
        <codeStyleSettingsProvider implementation="com.github.amnonya.hdleditor.vhdl.psi.codeStyle.VhdlCodeStyleSettingsProvider"/>
        <langCodeStyleSettingsProvider implementation="com.github.amnonya.hdleditor.vhdl.psi.codeStyle.VhdlLanguageCodeStyleSettingsProvider"/>
        <lang.psiStructureViewFactory language="VHDL" implementationClass="com.github.amnonya.hdleditor.vhdl.lang.VhdlStructureViewFactory" />
        <codeInsight.lineMarkerProvider language="VHDL" implementationClass="com.github.amnonya.hdleditor.vhdl.codeInsight.daemon.VhdlLineMarkerProvider" />
        <lang.foldingBuilder language="VHDL" implementationClass="com.github.amnonya.hdleditor.vhdl.lang.folding.VhdlFoldingBuilder" />
    </extensions>
</idea-plugin>